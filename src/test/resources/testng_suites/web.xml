<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="E-commerce Web Tests"
       parallel="methods"
       thread-count="4"
       data-provider-thread-count="4">

    <test name="LoginTests">
        <classes>
            <class name="tests.web.LoginTest"/>
            <class name="tests.web.LogoutTest"/>
        </classes>
    </test>

    <test name="ShoppingCartTests">
        <classes>
            <class name="tests.web.AddProductInCartTest"/>
            <class name="tests.web.RemoveProductFromCartTest"/>
        </classes>
    </test>

    <test name="InventoryAndCheckoutTests">
        <classes>
            <class name="tests.web.InventorySortingTest"/>
            <class name="tests.web.CheckoutTest"/>
        </classes>
    </test>

</suite>
